{% extends 'base.html.twig' %}

{% block title %}{{ 'twig.main.title' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>{{ 'twig.main.title' | trans }}</h1>

        <div class="card mt-4 text-center">
            <img src="{{ asset('uploads/' ~ app.user.photoUrl) }}"
                 alt="Фото профілю"
                 style="max-width: 700px; height: auto; border-radius: 15px; margin-top: 10px;"
            >
            <div class="card-body">
                <p><strong>Email:</strong> {{ app.user.email }}</p>
                <p><strong>{{ 'twig.main.is_two_factor_enabled'|trans }}</strong> {{ app.user.totpAuthenticationEnabled ? 'twig.main.yes' | trans : 'twig.main.no' | trans }}</p>
            </div>
        </div>
        <a class="btn w-auto btn-warning" href="edit/{{ app.user.id }}">Edit</a>
        <div class="text-center">
            {% if app.user.totpAuthenticationEnabled %}
                <div class="text-center">
                    <img src="{{ url }}" alt="QR-код для автентифікатора" width="300" height="300" class="mt-3">
                </div>

                <button class="btn btn-danger w-auto mt-4" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
                    {{ 'twig.main.disable_two_factor' | trans }}
                </button>
                {% else %}
                    <button class="btn btn-success w-auto mt-4" data-bs-toggle="modal" data-bs-target="#disable2FAModal">
                        {{ 'twig.main.enable_two_factor' | trans }}
                    </button>
            {% endif %}
        </div>
        <div>
            Останній вхід {{ app.user.lastLogin ? app.user.lastLogin|date('Y-m-d H:i:s', 'Europe/Kiev') : 'No last login' }}
        </div>
        <a href="{{ path('app_logout') }}" class="btn btn-danger w-auto mt-4">Logout</a>

        <div class="modal fade" id="disable2FAModal" tabindex="-1" aria-labelledby="disable2FAModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    {% set formAction = app.user.totpAuthenticationEnabled ? path('disable_2fa') : path('enable_2fa') %}
                    <form method="post" action="{{ formAction }}">

                    <div class="modal-header">
                            <h5 class="modal-title" id="disable2FAModalLabel">{{ 'twig.main.modal.title' | trans }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label= {{ 'twig.main.modal.button.close' | trans }}></button>
                        </div>
                        <div class="modal-body">
                            <p>{{ 'twig.main.modal.body' | trans }}</p>
                            <label>
                                <input type="password" id="password" name="password" class="form-control" required>
                            </label>
                            <label>
                                <input type="hidden" id="id" name="id" class="form-control" value="{{ app.user.id }}">
                            </label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'twig.main.modal.button.cancel' | trans }}</button>
                            {% set buttonClass = app.user.totpAuthenticationEnabled ? 'btn-danger' : 'btn-success' %}
                            {% set buttonText = app.user.totpAuthenticationEnabled ? 'twig.main.disable_two_factor' | trans : 'twig.main.enable_two_factor' | trans %}
                            <button type="submit" class="btn {{ buttonClass }}">{{ buttonText }}</button>
                        </div>
                        <input type="hidden" name="_token" value="{{ csrf_token('disable_2fa') }}">
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
